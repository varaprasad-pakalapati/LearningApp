<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vara.learningapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vara.learningapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vara.learningapp.LoginActivity"
            android:label="@string/action_login"
            android:parentActivityName="com.vara.learningapp.MainActivity" >
        </activity>
        <activity
            android:name=".downloader.DownloaderActivity"
            android:label="@string/action_downloader"
            android:parentActivityName="com.vara.learningapp.MainActivity" >
        </activity>

        <activity
            android:name="com.vara.learningapp.CalculatorActivity"
            android:label="@string/action_calculator">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
